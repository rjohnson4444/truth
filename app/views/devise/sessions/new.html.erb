<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Login</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.input :email, required: true, label: false, placeholder: "Email" %>
          <%= f.input :password, required: true, label: false, placeholder: "Password", hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Sign In", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>